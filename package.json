{
  "name": "tattoo-contest",
  "version": "0.1.0",
  "description": "Real-time tattoo contest web app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node tests/integration.test.js",
    "test:integration": "TEST_URL=${TEST_URL:-http://localhost:3000} node tests/integration.test.js",
    "load-test": "TEST_URL=${TEST_URL:-http://localhost:3000} CONCURRENT_USERS=${CONCURRENT_USERS:-50} DURATION=${DURATION:-60} node tests/load-test.js"
  },
  "dependencies": {
    "cloudinary": "^1.32.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "axios": "^1.6.0",
    "socket.io-client": "^4.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}
